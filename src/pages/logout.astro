---
// Logout page - clear session and redirect to main site
if (Astro.cookies) {
  // Clear all auth cookies
  Astro.cookies.delete('adminToken', { path: '/' });
  Astro.cookies.delete('userToken', { path: '/' });
  Astro.cookies.delete('adminUser', { path: '/' });
  Astro.cookies.delete('user', { path: '/' });
}

// Clear localStorage will be done on client side
---
<html>
<head>
  <meta charset="utf-8" />
  <title>Logging out...</title>
</head>
<body>
  <script is:inline>
    localStorage.removeItem('adminToken');
    localStorage.removeItem('adminUser');
    localStorage.removeItem('userToken');
    localStorage.removeItem('user');
    window.location.replace('http://localhost:3001/');
  </script>
</body>
</html>
