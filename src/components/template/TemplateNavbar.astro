---
const currentPath = Astro.url.pathname;
const isActive = (path: string) => currentPath === path ? 'active' : '';
---

<nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
	<div class="container">
		<a class="navbar-brand" href="/template-home">Car<span>Book</span></a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="oi oi-menu"></span> Menu
		</button>

		<div class="collapse navbar-collapse" id="ftco-nav">
			<ul class="navbar-nav ml-auto">
				<li class={`nav-item ${isActive('/template-home')}`}>
					<a href="/template-home" class="nav-link">Home</a>
				</li>
				<li class={`nav-item ${isActive('/about')}`}>
					<a href="/about" class="nav-link">About</a>
				</li>
				<li class={`nav-item ${isActive('/services')}`}>
					<a href="/services" class="nav-link">Services</a>
				</li>
				<li class={`nav-item ${isActive('/pricing')}`}>
					<a href="/pricing" class="nav-link">Pricing</a>
				</li>
				<li class={`nav-item ${isActive('/cars') || currentPath.startsWith('/cars/')}`}>
					<a href="/cars" class="nav-link">Cars</a>
				</li>
				<li class={`nav-item ${isActive('/blog') || currentPath.startsWith('/blog/')}`}>
					<a href="/blog" class="nav-link">Blog</a>
				</li>
				<li class={`nav-item ${isActive('/template-contact')}`}>
					<a href="/template-contact" class="nav-link">Contact</a>
				</li>
				<li class="nav-item">
					<a href="/login" class="nav-link">Login</a>
				</li>
			</ul>
		</div>
	</div>
</nav>
