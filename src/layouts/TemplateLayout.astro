		<script src="/template-assets/js/bootstrap.min.js"></script>
		<script src="/template-assets/js/jquery.easing.1.3.js"></script>
		<script src="/template-assets/js/jquery.waypoints.min.js"></script>
		<script src="/template-assets/js/jquery.stellar.min.js"></script>
		<script src="/template-assets/js/owl.carousel.min.js"></script>
		<script src="/template-assets/js/jquery.magnific-popup.min.js"></script>
		<script src="/template-assets/js/aos.js"></script>
		<script src="/template-assets/js/jquery.animateNumber.min.js"></script>
		<script src="/template-assets/js/bootstrap-datepicker.js"></script>
		<script src="/template-assets/js/jquery.timepicker.min.js"></script>
		<script src="/template-assets/js/scrollax.min.js"></script>
		<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
		<script src="/template-assets/js/google-map.js"></script>
